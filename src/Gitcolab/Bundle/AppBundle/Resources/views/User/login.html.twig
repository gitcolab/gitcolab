{% extends "GitcolabAppBundle::layout.html.twig" %}

{% block site_header %}
{% endblock %}
{% block body %}
    {% block content %}

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData) }}</div>
        {% endif %}

        <div class="form-login">
            <h1>Gitcolab</h1>
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-block">
                    <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
                        {% block flashes %}
                            {{ parent() }}
                        {% endblock %}
                        <fieldset>
                            <div class="form-group">
                                <label for="username" class="col-sm-3 control-label">Username</label>
                                <div class="col-sm-9">
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" id="password" name="_password" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <div class="checkbox">
                                        <label for="remember_me">
                                            Remember me &nbsp; <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                        <div class="form-actions clearfix">
                            <button type="submit" class="btn btn-primary" name="login" id="login"><i class="icon-lock"></i> Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock content %}
{% endblock body %}
