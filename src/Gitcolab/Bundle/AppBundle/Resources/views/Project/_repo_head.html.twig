<div class="repo-head">
    <h1 class="pull-left">
        <a href="{{ path('organization_show', {'slug' : project.organization.slug}) }}">
            {{ project.organization }}
        </a>
        <span>/</span>
        <a href="{{ path('project_show', {'slug' : project.fullSlug}) }}">
            {{ project }}
        </a>
    </h1>
    <ul class="pull-right nav nav-pills">
        <li role="presentation" class="nav-item">
            <a href="#" class="nav-link">Code</a>
        </li>
        <li role="presentation" class="nav-item">
            <a href="#" class="nav-link">Issues <span class="label label-default">0</span></a>
        </li>
        <li role="presentation" class="nav-item">
            <a href="#" class="nav-link">Pull Requests <span class="label label-default">0</span></a>
        </li>
        {% if is_granted('EDIT', project.organization) %}
        <li role="presentation" class="nav-item">
            <a href="{{ path('project_setting', {'slug' : project.fullSlug}) }}" class="nav-link">Settings </a>
        </li>
        {% endif %}
    </ul>
</div>
