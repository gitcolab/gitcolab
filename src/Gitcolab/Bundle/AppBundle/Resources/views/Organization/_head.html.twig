<div class="page-head">
    <div class="container">
        <h1>
            <img src="{{ gravatar(organization.email) }}" />
            <a href="{{ path('organization_show', {'slug' : organization.slug}) }}">
                {{ organization }}
            </a>
        </h1>
        <ul class="nav nav-tabs">
            <li role="presentation" class="nav-item">
                <a href="#" class="nav-link active">Repositories</a>
            </li>

            <li role="presentation" class="nav-item">
                <a href="#" class="nav-link">Settings</a>
            </li>

            <li role="presentation" class="nav-item">
                <a href="#" class="nav-link">Teams <span class="label label-default">0</span></a>
            </li>
            {% if is_granted('EDIT', organization) %}
                <li role="presentation" class="nav-item">
                    <a href="{{ path('project_setting', {'slug' : organization.slug}) }}" class="nav-link">Settings </a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
