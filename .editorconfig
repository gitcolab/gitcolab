; top-most EditorConfig file
root = true

[*]
charset = utf-8
; Unix-style newlines
end_of_line = LF
; Space indentation
indent_style = space
; Whitespace chars
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_size = 4

[*.js]
indent_size = 4

[*.less]
indent_size = 4

[*.css]
indent_size = 4

[*.html.twig]
indent_size = 4

[*.tpl]
indent_size = 2

[*.feature]
indent_size = 4

[*.rb]
indent_size = 2
